{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "extension: npm build",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "assistant: npm build",
      "type": "npm",
      "script": "build",
      "options": {
        "cwd": "${workspaceFolder}/vscode/assistant"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "language server: cargo build",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "unset CC SOURCE_DATE_EPOCH && cargo build --bin=acorn --profile=fastdev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "build all",
      "dependsOn": [
        "extension: npm build",
        "assistant: npm build",
        "language server: cargo build"
      ],
      "dependsOrder": "parallel"
    }
  ]
}
